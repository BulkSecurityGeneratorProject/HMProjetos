enum StatusParcela{
PENDENTE, EFETUADA, ATRASADA
}

enum TipoServico{
	PAQ, ASS, PRS
}

enum OP{
	CREDITO, DEBITO, PARCELA
}

enum TipoSituacao{
	FM, FD_LIVRE, FD_HC, FCC_LOCAL, FCC_LIGAR, FCT, R_INICIAL,
    R_FINAL, ARC, ART, EP, D
}

enum TipoCargo{
	SECRETARIA, DESENHO, GERENCIA
}

entity Codigos{
	tipo String
	ano Integer
    numero Integer
}

entity ExtendUser{
	tipo TipoCargo
}

entity Cliente{
	nome String required 
	endereco String
    bairro String
    cidade String
    estado String maxlength(2) 
    cep String
    email String
    indicacao String
    documento String
}

entity Telefone{
	contato String
	numero String required
}

entity Servico {
	tipo TipoServico required
    codigo String required
	descricao String
	endereco String
    bairro String
    cidade String
    estado String maxlength(2) 
    cep String
    inicio LocalDate
    fim LocalDate
    iptu String
    link String
}

entity Orcamento{
valor Float required
entrada Float
}

entity Parcela{
descricao String
status StatusParcela
valor Float required
dtestipulada LocalDate
dtefetuada LocalDate
}

entity Transacao{
valor Float required
data LocalDate required
descricao String
operacao OP required
}

entity Situacao{
	tipo TipoSituacao required
    descricao String 
    terceiro String
    dtinicio LocalDate 
    dtfim LocalDate
    dtestipulada LocalDate
}

relationship OneToOne{
	ExtendUser{user} to User
}

relationship OneToMany{
	Servico{situacao} to Situacao{servico}
}

relationship OneToMany{
	ExtendUser{situacao} to Situacao{responsavel}
}

relationship OneToMany{
	Servico{transacao} to Transacao{servico}
}

relationship OneToMany {
	Cliente{telefone} to Telefone{cliente}
}

relationship OneToMany {
	Cliente{servico} to Servico{cliente}
}

relationship OneToOne {
	Orcamento{servico} to Servico{orcamento}
}

relationship OneToMany {
	Orcamento{parcela} to Parcela{orcamento}
}

relationship OneToOne{
	Transacao{parcela} to Parcela{transacao}
}

paginate Cliente, Servico, Situacao, Parcela with infinite-scroll



